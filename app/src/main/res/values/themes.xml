<resources>
    <style name="Base.Theme.StudentApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fo_deep_red_2</item>
        <item name="colorPrimaryVariant">@color/fo_deep_red_1</item>
        <item name="android:statusBarColor" >@color/fo_deep_red_1</item>
    </style>

    <style name="Theme.StudentApp" parent="Base.Theme.StudentApp" />

    <style name="CustomOutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/fo_deep_red_2</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
    </style>

    <style name="CustomOutlinedBox2" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/fo_deep_red_2</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyMediumLarger" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleMediumWhite" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/fo_white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>